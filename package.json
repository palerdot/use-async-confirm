{
  "name": "use-async-confirm",
  "private": false,
  "version": "0.0.1",
  "description": "Async, headless useConfirm hook that you can await on",
  "packageManager": "pnpm@9.12.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/palerdot/use-async-confirm"
  },
  "main": "./dist/use-async-confirm.umd.js",
  "module": "./dist/use-async-confirm.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/use-async-confirm.es.js",
      "require": "./dist/use-async-confirm.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "build": "tsc && vite build",
    "lint": "biome lint src/",
    "format": "biome format --write src/",
    "check": "biome check src/",
    "test": "vitest",
    "test:cov": "vitest run --coverage",
    "prepare": "husky install",
    "prepack": "json -f package.json -I -e \"delete this.devDependencies; delete this.dependencies\""
  },
  "devDependencies": {
    "@babel/core": "7.22.10",
    "@biomejs/biome": "1.9.4",
    "@storybook/addon-essentials": "7.2.2",
    "@storybook/addon-interactions": "7.2.2",
    "@storybook/addon-links": "7.2.2",
    "@storybook/addon-styling": "1.3.6",
    "@storybook/blocks": "7.2.2",
    "@storybook/react": "7.2.2",
    "@storybook/react-vite": "7.2.2",
    "@storybook/testing-library": "0.2.0",
    "@testing-library/react": "14.0.0",
    "@types/node": "20.4.9",
    "@types/react": "18.2.20",
    "@types/react-dom": "18.2.7",
    "@vitejs/plugin-react": "4.0.4",
    "@vitest/coverage-v8": "0.34.1",
    "autoprefixer": "10.4.14",
    "babel-loader": "9.1.3",
    "husky": "8.0.3",
    "jsdom": "22.1.0",
    "json": "11.0.0",
    "lint-staged": "13.2.3",
    "postcss": "8.4.27",
    "prop-types": "15.8.1",
    "storybook": "7.2.2",
    "tailwindcss": "3.3.3",
    "typescript": "5.1.6",
    "vite": "4.4.9",
    "vite-plugin-dts": "3.5.1",
    "vitest": "0.34.1"
  },
  "peerDependencies": {
    "react": "18.3.0",
    "react-dom": "18.3.0"
  },
  "files": [
    "dist"
  ],
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "biome check"
    ]
  }
}
